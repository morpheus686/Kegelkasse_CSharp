<components:DialogView x:Class="Strafenkatalog.View.EditPenaltyView"
             xmlns:components="clr-namespace:Strafenkatalog.Components"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Strafenkatalog.View"
                       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
                       xmlns:viewmodel="clr-namespace:Strafenkatalog.ViewModel"
                       d:DataContext="{d:DesignInstance Type=viewmodel:EditPenaltyViewModel}"
                       mc:Ignorable="d" 
                       Width="500"
             d:DesignHeight="450" d:DesignWidth="800"
             Style="{StaticResource DialogViewStyle}"
                       Header="Bearbeiten">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Spieler"
                   Grid.Row="0" 
                   FontSize="16"/>
            <TextBox Grid.Row="0"
                 Grid.Column="1"
                     IsReadOnly="True"
                 Text="{Binding Name, Mode=OneTime}"/>
            <TextBlock Text="Volle"
                   Grid.Row="1" 
                   FontSize="16"/>

            <materialDesign:DecimalUpDown Grid.Row="1"
                                          Grid.Column="1"
                                          Value="{Binding Full, Mode=TwoWay}"
                                          Minimum="0"
                                          Maximum="500"/>
            <TextBlock Text="Abräumen"
           Grid.Row="2" 
           FontSize="16"/>
            <materialDesign:DecimalUpDown Grid.Row="2"
                     Grid.Column="1"
                     Value="{Binding Clear, Mode=TwoWay}" 
                                 Minimum="0"
                                 Maximum="300"/>
            <TextBlock Text="Gesamt"
           Grid.Row="3" 
           FontSize="16"/>
            <TextBox Grid.Row="3"
                         Grid.Column="1"
                     IsReadOnly="True"
                         Text="{Binding Result, Mode=OneWay}" />
            <TextBlock Text="Fehler"
                   Grid.Row="4" 
                   FontSize="16"/>

            <materialDesign:DecimalUpDown Grid.Row="4"
                                   Grid.Column="1"
                                   Value="{Binding Errors, Mode=TwoWay}" 
                                   Minimum="0"
                                   Maximum="120"/>
        </Grid>
        <ListBox Grid.Column="1" Margin="5"
                 ItemsSource="{Binding PlayerPenaltyViewModels}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="{Binding Description, Mode=OneTime}"
                                   VerticalAlignment="Center"
                                   FontSize="16"
                                   Grid.Column="0"/>
                        <materialDesign:DecimalUpDown Value="{Binding Value}"                                     
                                                 IsEnabled="{Binding IsNotErrorPenalty, Mode=OneTime}"
                                                 Grid.Column="1"
                                                 HorizontalAlignment="Center"
                                                 Width="50"
                                                 Minimum="0" Maximum="120"/>

                        <TextBlock Text="{Binding ToPay, Mode=OneWay, Converter={StaticResource EuroFormatConverter}}"
                                   Grid.Column="2"
                                   />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

            <StackPanel Grid.Row="2"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button 
                    Content="Speichern"
                    Width="100"
                    HorizontalAlignment="Right"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="{x:Static components:DialogResult.Yes}"
                    Margin="0,0,5,0"/>
                <Button 
                    Content="Abbrechen"
                    Width="100"
                    HorizontalAlignment="Right"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="{x:Static components:DialogResult.Abort}"
                    Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                    Margin="5,0,0,0"
                    IsCancel="True"/>
            </StackPanel>
    </Grid>
</components:DialogView>
