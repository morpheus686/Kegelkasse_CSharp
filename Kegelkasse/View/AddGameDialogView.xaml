<components:DialogView x:Class="Kegelkasse.View.AddGameDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kegelkasse.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
                       Style="{StaticResource DialogViewStyle}"
                       Header="Spieltag anlegen"
                       xmlns:components="clr-namespace:Kegelkasse.Components"
                       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="300"/>
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Spieldaten"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                   Grid.Row="0"
                   Grid.Column="0" 
                   Margin="10"/>

        <Grid Grid.Row="1"
              Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock Text="Datum"
                       FontSize="16"
                       VerticalAlignment="Center"/>
            <DatePicker Grid.Column="1" 
                        FontSize="16"/>

            <TextBlock Text="Mannschaft"
                       FontSize="16"
                       Grid.Row="1" Grid.Column="0"
                       VerticalAlignment="Center"/>
            <ComboBox Grid.Row="1" Grid.Column="1"
                      FontSize="16"
                      ItemsSource="{Binding Teams, Mode=OneTime}"
                      SelectedItem="{Binding SelectedTeam, Mode=TwoWay}"
                      DisplayMemberPath="TeamName"/>

            <TextBlock Text="Gegner"
                       FontSize="16"
                       Grid.Row="2" Grid.Column="0"
                       VerticalAlignment="Center"/>
            <TextBox FontSize="16"
                     Grid.Row="2" Grid.Column="1"
                     Text="{Binding Opponent, Mode=TwoWay, ValidatesOnNotifyDataErrors=True, UpdateSourceTrigger=PropertyChanged, NotifyOnValidationError=True}"/>

            <TextBlock Text="Spieltag"
                       FontSize="16"
                       Grid.Row="3" Grid.Column="0"
                       VerticalAlignment="Center"/>
            <materialDesign:DecimalUpDown FontSize="16"
                     Grid.Row="3" Grid.Column="1"
                                          Maximum="22"
                                          Minimum="1"
                                          Value="{Binding GameNumber}"/>
        </Grid>

        <TextBlock Text="Spieler für das Spiel"
                   Style="{StaticResource MaterialDesignHeadline6TextBlock}" 
                   Grid.Column="1"
                   Margin="10"/>
        <!--<ListBox Margin="5"
                 Grid.Column="1"
                 Grid.Row="1"
                 HorizontalContentAlignment="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card Padding="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="200"/>
                            </Grid.ColumnDefinitions>

                            <CheckBox Grid.Column="0" 
                                      Margin="5"/>
                            <TextBlock Text="Christopher Wurm, RT 2" Grid.Column="1"
                                       VerticalAlignment="Center"/>
                            
                        </Grid>
                    </materialDesign:Card>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.Items>
                <Border Background="Yellow" />
                <Border Background="Yellow" />
                <Border Background="Yellow" />
            </ListBox.Items>
        </ListBox>-->
        <DataGrid Grid.Row="1" Grid.Column="1" AutoGenerateColumns="False"
                  Margin="10"
                  ItemsSource="{Binding Players, Mode=OneWay}">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Binding="{Binding IsPlaying}"/>
                <DataGridTextColumn Header="Spieler" Binding="{Binding PlayerName, Mode=OneWay}" IsReadOnly="True" />
            </DataGrid.Columns>
        </DataGrid>


        <StackPanel Grid.Row="3"
                        Grid.Column="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
            <Button 
                    Content="Speichern"
                    Width="100"
                    HorizontalAlignment="Right"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="{x:Static components:DialogResult.Yes}"
                    Margin="0,0,5,0"
                IsEnabled="{Binding HasErrors, Converter={StaticResource InverseBooleanConverter}}" Cursor="Hand"/>
            <Button 
                    Content="Abbrechen"
                    Width="100"
                    HorizontalAlignment="Right"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="{x:Static components:DialogResult.Abort}"
                    Style="{StaticResource MaterialDesignFlatSecondaryButton}"
                    Margin="5,0,0,0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</components:DialogView>
